#!/bin/sh

if [ -d /etc/X11/xinit/xinitrc.d ] ; then
 for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
  [ -x "$f" ] && . "$f"
 done
 unset f
fi

[[ -f $HOME/.Xresources ]] && xrdb -merge -I$HOME $HOME/.Xresources

{% if xrandr_start_options != '' %}
xrandr {{ xrandr_start_options }}
{% endif %}

xset -b
xset dpms 600

exec i3